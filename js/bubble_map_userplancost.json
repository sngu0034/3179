{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 1000,
  "height": 500,
  "title": {
    "text": "Average Internet Speed of 200+ countries in 2022",
    "frame": "group"
  },
  "style": "view",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/sngu0034/3179/main/js/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/sngu0034/3179/main/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    {
      "name": "source_3",
      "url": "https://raw.githubusercontent.com/sngu0034/3179/main/data/internet_edited.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/sngu0034/3179/main/js/ne_110m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME_LONG\"]",
          "as": "properties.NAME_LONG"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "formula",
          "expr": "'Data is not available in ' + datum.properties.NAME_LONG",
          "as": "note"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_3",
          "key": "Country",
          "fields": ["properties.NAME_LONG"],
          "values": ["Avg (Mbit/s)"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Avg (Mbit/s)\"]) && isFinite(+datum[\"Avg (Mbit/s)\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {
        "signal": "[data('data_0'), data('source_1'), data('source_2'), data('data_1')]"
      },
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "tooltip": {
            "signal": "isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"]"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"note: \" + (isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "fill": {"value": "skyblue"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "lightgray"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_3_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "stroke": {"value": "white"},
          "fill": {"scale": "color", "field": "Avg (Mbit/s)"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME_LONG\"]) ? datum[\"properties.NAME_LONG\"] : \"\"+datum[\"properties.NAME_LONG\"], \"Avg (Mbit/s)\": format(datum[\"Avg (Mbit/s)\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Avg (Mbit/s): \" + (format(datum[\"Avg (Mbit/s)\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME_LONG\"]) ? datum[\"properties.NAME_LONG\"] : \"\"+datum[\"properties.NAME_LONG\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "data_1", "field": "Avg (Mbit/s)"},
      "range": {"scheme": "reds"},
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "Avg (Mbit/s)"
    }
  ]
}